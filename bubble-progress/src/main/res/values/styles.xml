<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="BubbleProgressBar">
        <attr name="bpb_count" format="integer"/>
        <attr name="bpb_color" format="color"/>
        <attr name="bpb_highlight_color" format="color"/>
        <attr name="bpb_bubble_size" format="dimension"/>
        <attr name="bpb_line_width" format="dimension"/>
        <attr name="bpb_line_height" format="dimension"/>
        <attr name="bpb_text_start_color" format="color"/>
        <attr name="bpb_text_end_color" format="color"/>
    </declare-styleable>

</resources>
